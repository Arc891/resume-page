---
import site from "../config/site";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import Metadata, { type MetadataProps } from "../components/Metadata.astro";
import "../styles/global.css";

export interface Props extends MetadataProps {
  title?: string;
  description?: string;
}

const { title, description, ...metadataProps } = Astro.props;
---

<!doctype html>
<html lang="en" class="min-h-full">
  <head>
    <Metadata title={title} description={description} {...metadataProps} />

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
    
    <script is:inline>
      (function () {
        const stored = localStorage.getItem("theme");
        const theme = stored || (matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light");
        if (theme !== "light") document.documentElement.setAttribute("data-theme", theme);
      })();
    </script>
  </head>
  <body
    class="font-sans min-h-screen bg-[var(--color-bg-primary)] text-[var(--color-text-secondary)]"
  >
    <Nav />
    <main class="min-h-[70vh] mx-auto max-w-6xl px-3 sm:px-6 py-6 sm:py-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
