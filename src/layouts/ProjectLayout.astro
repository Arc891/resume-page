---
import BaseLayout from './BaseLayout.astro';

const { frontmatter } = Astro.props;
const { title, date, tech = [] } = frontmatter;

// Format date if provided
const formattedDate = date ? new Date(date).toLocaleDateString('en-US', { 
  year: 'numeric', 
  month: 'long', 
  day: 'numeric' 
}) : null;
---

<BaseLayout title={title} description={`Case study: ${title}`}>
  <article class="mx-auto max-w-4xl">
    <!-- Project header -->
    <header class="mb-8">
      <div class="card-theme rounded-3xl p-6">
        <h1 class="text-3xl font-bold tracking-tight text-theme-primary">{title}</h1>
        
        {formattedDate && (
          <p class="mt-2 text-sm text-theme-muted">{formattedDate}</p>
        )}
        
        {tech.length > 0 && (
          <div class="mt-4 flex flex-wrap gap-2">
            {tech.map((t: String, i: number) => (
              <span class={`tech-badge-${(i % 4) + 1}`}>
                {t}
              </span>
            ))}
          </div>
        )}
      </div>
    </header>

    <!-- Main content with prose styling -->
    <div class="prose prose-slate max-w-none custom-prose">
      <div class="card-theme rounded-3xl p-6 md:p-8">
        <slot />
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  /* Enhanced prose styling to match homepage aesthetic */
  /* Use very high specificity to override Tailwind's base styles */
  article .prose.custom-prose h1,
  article .prose.custom-prose h2,
  article .prose.custom-prose h3,
  article .prose.custom-prose h4,
  article .prose.custom-prose h5,
  article .prose.custom-prose h6 {
    color: var(--color-text-primary);
    font-weight: 600;
    font-family: inherit;
    transition: var(--transition-fast);
  }
  
  article .prose.custom-prose h1 {
    font-size: 1.875rem; /* 30px */
    line-height: 2.25rem; /* 36px */
    font-weight: 700;
  }
  
  article .prose.custom-prose h2 {
    font-size: 1.5rem; /* 24px */
    line-height: 2rem; /* 32px */
  }
  
  article .prose.custom-prose h3 {
    font-size: 1.25rem; /* 20px */
    line-height: 1.75rem; /* 28px */
  }

  article .prose.custom-prose h4 {
    font-size: 1.125rem; /* 18px */
    line-height: 1.5rem; /* 24px */
  }

  article .prose.custom-prose h5 {
    font-size: 1rem; /* 16px */
    line-height: 1.25rem; /* 20px */
  }

  article .prose.custom-prose h6 {
    font-size: 0.875rem; /* 14px */
    line-height: 1.125rem; /* 18px */
  }
</style>
