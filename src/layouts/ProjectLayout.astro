---
import BaseLayout from "./BaseLayout.astro";
import site from "../config/site";

const { frontmatter } = Astro.props;
const { title, date, tech = [], preview = "", description = "" } = frontmatter;

const formattedDate = date
  ? new Date(date).toLocaleDateString("en-US", {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  : null;

const projectDescription =
  description ||
  `Case study: ${title} - A detailed look at the development process, technologies used, and key learnings from this project.`;
const projectKeywords =
  tech.length > 0
    ? `${site.seo.keywords}, ${tech.join(", ")}, project case study, portfolio`
    : `${site.seo.keywords}, project case study, portfolio`;
---

<BaseLayout
  title={`${title} — ${site.name}`}
  description={projectDescription}
  keywords={projectKeywords}
  ogTitle={`${title} — Project by ${site.name}`}
  ogDescription={projectDescription}
  ogType="article"
>
  <article class="mx-auto max-w-5xl">
    <!-- Project header -->
    <header class="mb-8">
      <div class="card-theme rounded-3xl p-6 shadow-theme-md">
        <h1 class="text-3xl font-bold tracking-tight text-theme-primary">
          {title}
        </h1>

        {
          formattedDate && (
            <p class="mt-2 text-sm text-theme-muted">{formattedDate}</p>
          )
        }

        {
          preview && (
            <a
              href={preview}
              class="mt-4 inline-block text-sm font-medium text-theme-accent hover:underline"
            >
              Preview of this project
            </a>
          )
        }

        {
          tech.length > 0 && (
            <div class="mt-4 flex flex-wrap gap-2">
              {tech.map((t: String, i: number) => (
                <span class={`tech-badge-${(i % 4) + 1}`}>{t}</span>
              ))}
            </div>
          )
        }
      </div>
    </header>

    <!-- Main content with prose styling -->
    <div class="prose prose-slate max-w-none custom-prose">
      <div class="card-theme rounded-3xl p-6 md:p-8 shadow-theme-sm">
        <slot />
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  /* Enhanced prose styling to match homepage aesthetic */
  /* Use very high specificity to override Tailwind's base styles */
  article .prose.custom-prose h1,
  article .prose.custom-prose h2,
  article .prose.custom-prose h3,
  article .prose.custom-prose h4,
  article .prose.custom-prose h5,
  article .prose.custom-prose h6 {
    color: var(--color-text-primary);
    font-weight: 600;
    font-family: inherit;
    transition: var(--transition-fast);
  }

  article .prose.custom-prose h1 {
    font-size: 1.875rem; /* 30px */
    line-height: 2.25rem; /* 36px */
    font-weight: 700;
  }

  article .prose.custom-prose h2 {
    font-size: 1.5rem; /* 24px */
    line-height: 2rem; /* 32px */
  }

  article .prose.custom-prose h3 {
    font-size: 1.25rem; /* 20px */
    line-height: 1.75rem; /* 28px */
  }

  article .prose.custom-prose h4 {
    font-size: 1.125rem; /* 18px */
    line-height: 1.5rem; /* 24px */
  }

  article .prose.custom-prose h5 {
    font-size: 1rem; /* 16px */
    line-height: 1.25rem; /* 20px */
  }

  article .prose.custom-prose h6 {
    font-size: 0.875rem; /* 14px */
    line-height: 1.125rem; /* 18px */
  }
</style>
