---
import BaseLayout from './BaseLayout.astro';

const { frontmatter } = Astro.props;
const { title, date, tech = [] } = frontmatter;

// Format date if provided
const formattedDate = date ? new Date(date).toLocaleDateString('en-US', { 
  year: 'numeric', 
  month: 'long', 
  day: 'numeric' 
}) : null;
---

<BaseLayout title={title} description={`Case study: ${title}`}>
  <article class="mx-auto max-w-4xl">
    <!-- Project header -->
    <header class="mb-8">
      <div class="rounded-xl border border-slate-200 bg-white/70 p-6">
        <h1 class="text-3xl font-bold tracking-tight text-slate-900">{title}</h1>
        
        {formattedDate && (
          <p class="mt-2 text-sm text-slate-500">{formattedDate}</p>
        )}
        
        {tech.length > 0 && (
          <div class="mt-4 flex flex-wrap gap-2">
            {tech.map((t: String, i: number) => (
              <span class={`inline-flex items-center rounded-full px-3 py-1 text-xs font-medium ${
                ['bg-indigo-50 text-indigo-700', 'bg-violet-50 text-violet-700', 'bg-cyan-50 text-cyan-700', 'bg-rose-50 text-rose-700'][i % 4]
              }`}>
                {t}
              </span>
            ))}
          </div>
        )}
      </div>
    </header>

    <!-- Main content with prose styling -->
    <div class="prose prose-slate max-w-none custom-prose">
      <div class="rounded-xl border border-slate-200 bg-white/70 p-6 md:p-8">
        <slot />
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  /* Enhanced prose styling to match homepage aesthetic */
  .prose {
    color: rgb(51 65 85); /* slate-700 */
  }
  
  /* Use very high specificity to override Tailwind's base styles */
  article .prose.custom-prose h1,
  article .prose.custom-prose h2,
  article .prose.custom-prose h3,
  article .prose.custom-prose h4,
  article .prose.custom-prose h5,
  article .prose.custom-prose h6 {
    color: rgb(15 23 42); /* slate-900 */
    font-weight: 600;
    margin-top: 0;
    font-family: inherit;
  }
  
  article .prose.custom-prose h1 {
    font-size: 1.875rem; /* 30px */
    line-height: 2.25rem; /* 36px */
    font-weight: 700;
    margin-bottom: 1rem;
  }
  
  article .prose.custom-prose h2 {
    font-size: 1.5rem; /* 24px */
    line-height: 2rem; /* 32px */
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  article .prose.custom-prose h3 {
    font-size: 1.25rem; /* 20px */
    line-height: 1.75rem; /* 28px */
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  article .prose.custom-prose h4 {
    font-size: 1.125rem; /* 18px */
    line-height: 1.5rem; /* 24px */
    margin-top: 1.25rem;
    margin-bottom: 0.5rem;
  }

  article .prose.custom-prose h5 {
    font-size: 1rem; /* 16px */
    line-height: 1.25rem; /* 20px */
    margin-top: 1rem;
    margin-bottom: 0.5rem;
  }

  article .prose.custom-prose h6 {
    font-size: 0.875rem; /* 14px */
    line-height: 1.125rem; /* 18px */
    margin-top: 1rem;
    margin-bottom: 0.5rem;
  }
  
  .prose p {
    color: rgb(71 85 105); /* slate-600 */
    line-height: 1.625;
    margin-bottom: 1rem;
  }
  
  .prose strong {
    color: rgb(15 23 42); /* slate-900 */
    font-weight: 600;
  }
  
  .prose a {
    color: rgb(99 102 241); /* indigo-500 */
    text-decoration: underline;
    text-decoration-color: rgb(165 180 252); /* indigo-300 */
    transition: all 0.2s;
  }
  
  .prose a:hover {
    color: rgb(79 70 229); /* indigo-600 */
    text-decoration-color: rgb(99 102 241); /* indigo-500 */
  }
  
  .prose ul, .prose ol {
    color: rgb(71 85 105); /* slate-600 */
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
  }
  
  .prose code {
    background-color: rgb(241 245 249); /* slate-100 */
    color: rgb(51 65 85); /* slate-700 */
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }
  
  .prose pre {
    background-color: rgb(15 23 42); /* slate-900 */
    color: rgb(226 232 240); /* slate-200 */
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1rem 0;
  }
  
  .prose blockquote {
    border-left: 4px solid rgb(165 180 252); /* indigo-300 */
    padding-left: 1rem;
    color: rgb(71 85 105); /* slate-600 */
    font-style: italic;
    margin: 1rem 0;
  }
</style>
