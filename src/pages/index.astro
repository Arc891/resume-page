---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import ProjectCard from '../components/ProjectCard.astro';

const projects = [
  { title: 'Project Foo', description: 'A compact demo showing interactive islands', href: '/projects/project-foo' },
  { title: 'Project Bar', description: 'Another neat tool', href: '/projects/project-bar' }
];
---
<BaseLayout title="Ezra Hulsman — Developer" description="Resume and portfolio of Ezra Hulsman, software engineer." >
  <Header name="Ezra Hulsman" role="Fullstack / Systems" />

  <section class="mt-6">
    <div class="rounded-xl border border-slate-200 bg-white/70 p-6">
      <h2 class="text-xl font-semibold tracking-tight">About</h2>
      <p class="mt-2 text-slate-600 leading-relaxed">
        I build fast, robust systems and delightful UIs. I enjoy working across the stack—from low-level performance
        to polished product experiences. Currently exploring Astro islands, edge runtimes, and typed APIs.
      </p>
      <div class="mt-4 flex flex-wrap gap-2">
        <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs text-slate-700">Astro</span>
        <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs text-slate-700">TypeScript</span>
        <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs text-slate-700">React</span>
        <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs text-slate-700">Rust</span>
      </div>
    </div>
  </section>

  <section class="mt-10">
    <div class="flex items-center justify-between">
      <h2 class="text-xl font-semibold">Selected projects</h2>
      <a href="/projects" class="text-sm text-slate-600 hover:text-slate-900">See all →</a>
    </div>
    <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-5">
      {projects.map(p => (
        <ProjectCard title={p.title} description={p.description} href={p.href} />
      ))}
    </div>
  </section>

  <section class="mt-10">
    <h2 class="text-xl font-semibold">Contact</h2>
    <p class="mt-2 text-sm text-slate-600">I'm open to interesting opportunities. Email me at <a class="underline" href="mailto:info@hulsman.dev">info@hulsman.dev</a>.</p>
  </section>
</BaseLayout>
