---
import { gravatarUrl } from '../lib/gravatar';
import site from '../config/site';
const { name = site.name, role = site.role, location = site.location } = Astro.props;
---
<header class="py-6">
  <div class="card-theme rounded-2xl p-6 md:p-8 shadow-sm">
    <div class="flex flex-row items-center flex-nowrap gap-4 sm:gap-6">
      <img
        src={gravatarUrl}
        onerror="this.onerror=null;this.src='/avatar.svg'"
        alt={name}
        width={160}
        height={160}
        class="w-24 h-24 sm:w-28 sm:h-28 md:w-40 md:h-40 rounded-full ring-4 ring-indigo-200/70 object-cover shadow-md shrink-0"
      />
      <div class="flex-1 min-w-0 break-words text-left">
        <h1 class="text-3xl md:text-4xl font-semibold tracking-tight text-theme-primary">{name}</h1>
        <p class="mt-1 text-base text-theme-tertiary">{role} · {location}</p>
        <p class="text-xs text-theme-muted mt-2">Python · React · Rust · C/C++ · Java · Bash</p>
      </div>
    </div>
  </div>
</header>
