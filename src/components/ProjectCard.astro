---
interface Props {
  title: string;
  description: string;
  href: string;
  tags?: string[];
}
const { title, description, href, tags = [] as string[] } = Astro.props as Props;
---
<article class="rounded-xl border border-slate-200 bg-white/80 p-5 hover:border-slate-300 hover:shadow-sm transition-all">
  <h3 class="text-base font-semibold tracking-tight">
    <a class="hover:underline" href={href}>{title}</a>
  </h3>
  <p class="text-sm text-slate-600 mt-2 leading-relaxed">{description}</p>
  <div class="mt-3 flex flex-wrap gap-2">
    {tags.map(t => (
      <span class="text-xs px-2 py-1 rounded-full bg-slate-100 text-slate-700">{t}</span>
    ))}
  </div>
</article>
