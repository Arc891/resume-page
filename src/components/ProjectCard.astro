---
interface Props {
  title: string;
  description: string;
  href: string;
  tags?: string[];
}
const { title, description, href, tags = [] as string[] } = Astro.props as Props;
---
<article class="card-responsive hover:border-theme-secondary hover:shadow-sm transition-all duration-200">
  <h3 class="text-responsive-base font-semibold tracking-tight text-theme-primary">
    <a href={href} class="hover:text-theme-accent transition-colors duration-200">{title}</a>
  </h3>
  <p class="text-responsive-sm text-theme-tertiary mt-2 leading-relaxed">{description}</p>
  {tags && tags.length > 0 && (
    <div class="mt-3 flex flex-wrap gap-1">
      {tags.map((t: string) => (
      <span class="text-xs px-2 py-1 rounded-full bg-theme-secondary text-theme-muted">{t}</span>
      ))}
    </div>
  )}
</article>
